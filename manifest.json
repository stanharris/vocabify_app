{
  "manifest_version": 2,
  "name": "Vocabify",
  "applications": {
    "gecko": {
      "id": "addon@vocabifyapp.com"
    }
  },
  "description":
    "Improve your vocabulary. Add words to Vocabify with one click.",
  "version": "3.1.0",
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "index.html",
    "default_title": "Vocabify"
  },
  "background": {
    "scripts": ["eventpage.js"]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon256.png",
    "256": "icon256.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "notifications",
    "http://*/*",
    "https://*/*"
  ]
}
